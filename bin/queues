#!/usr/bin/ruby

# add lib dir to path
$:.unshift File.join(File.dirname(__FILE__),'..','lib')

# require uuid gem
require 'rubygems'
gem 'uuid'

# try loading lib, err try gem
begin
  require 'reliable-msg'
rescue LoadError
  puts "error loading... trying gem instead"
  gem 'reliable-msg'
end
ReliableMsg::CLI.new.run

